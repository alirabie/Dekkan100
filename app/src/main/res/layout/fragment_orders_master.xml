<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dekkan100.appsmatic.com.dekkan100.Fragments.ProfileFrags.ProfileMasterFrag">

    <com.astuetz.PagerSlidingTabStrip
        android:layoutDirection="ltr"
        android:id="@+id/orders_master_tabs"
        app:pstsShouldExpand="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:fillViewport="true"
        android:textSize="13sp"
        android:layout_marginTop="?attr/actionBarSize"
        style="@style/pagertabs"
        app:pstsIndicatorColor="@color/colorPrimary"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_below="@+id/orders_master_tabs" />

</RelativeLayout>
